<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Состояние нажатия -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#FF8C00" /> <!-- Цвет кнопки при нажатии -->
        </shape>
    </item>
    <!-- Обычное состояние -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="45"
                android:endColor="#FFA500"
                android:startColor="#FF4500"
                android:type="linear" />
            <stroke
                android:width="2dp"
                android:color="#FF6347" /> <!-- Обводка -->
        </shape>
    </item>
</selector>
